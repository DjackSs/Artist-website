<section>
    
    <h2>Scrapbooking</h2>
    
    <% for(let produit of produits) { %>
        
       <article id="<%= produit.id %>">
            <p><%= produit.nom %></p>
            <p><%= produit.description %></p>
            <p><%= produit.prix %></p>
        
        <% if(locals.isClient && (produit.idUserPanier != locals.idClient)) { %>
        
        <button class="js-addProduit-button" data-addProduct = "<%= produit.id %>" data-addClient="<%= locals.idClient %>">Ajouter au panier</button>
        
        <% } %>
    
    </article>
    
    <% } %>
    
</section>

<% if(locals.isClient) { %>

